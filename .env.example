# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/smart_factory
DB_NAME=smart_factory

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# MQTT Configuration (Device Communication)
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=smart_factory_backend

# WebSocket Configuration (Frontend Real-time Updates)
# WebSocket runs on same port as HTTP server (PORT above)
# Clients connect to: ws://localhost:3000 or wss://yourdomain.com
# CORS settings below apply to WebSocket connections as well

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (REST API + WebSocket)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
